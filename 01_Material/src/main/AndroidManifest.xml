<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.niit.material" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DefaultTheme" >
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".transitions.TransitionsActivity"
                android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
                android:name=".transitions.ExplodeActivity"
                android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
                android:name=".transitions.FadeActivity"
                android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
                android:name=".transitions.SlideActivity"
                android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
                android:name=".transitions.ShareActivity"
                android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:theme="@style/WidgetTheme"
            android:name=".widget.WidgetActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
